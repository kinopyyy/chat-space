.side_bar
  .side_bar__user_name
    .side_bar__user_name__top_items
      .side_bar__user_name__top_items__name
        = current_user.name
      .side_bar__user_name__top_items__icon

        = link_to new_group_path, class: "side_bar__user_name__top_items__icon__group" do
          = icon('far', 'edit')

        = link_to edit_user_path(current_user), class: "side_bar__user_name__top_items__icon__group" do
          = icon('fas', 'cog')      
            
  .side_bar__user_group
    - current_user.groups.each do |group|
      .side_bar__user_group__top_item
        = link_to group_messages_path(group), method: :get do
          .side_bar__user_group__top_item__group
            = group.name
          .side_bar__user_group__top_item__current_message
            = group.show_last_message

